{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    // "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "files": [
    "./src/App.ts",
    "./src/Sandbox.ts",
    "src/external/my-anime-list/types.ts",
    "src/external/open-ai/core.ts"
  ],
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
